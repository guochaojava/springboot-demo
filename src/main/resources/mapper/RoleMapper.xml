<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.demo.dao.RoleMapper">
    <resultMap id="BaseResultMap" type="com.example.demo.model.Role">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="code" property="code" jdbcType="VARCHAR"/>
    </resultMap>

    <resultMap id="VoResultMap" type="com.example.demo.vo.RoleVO">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="code" property="code" jdbcType="VARCHAR"/>

        <collection property="permissions" javaType="java.util.List" ofType="java.lang.String">
            <result column="permission_id" jdbcType="VARCHAR"/>
        </collection>
    </resultMap>

    <sql id="Base_Column_List">
        id, name, code
    </sql>
    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Long">
        select
        <include refid="Base_Column_List"/>
        from role
        where id = #{id,jdbcType=BIGINT}
    </select>
    <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
        DELETE FROM role
        WHERE id = #{id,jdbcType=BIGINT}
    </delete>
    <insert id="add" parameterType="com.example.demo.model.Role">
        <selectKey resultType="java.lang.Long" keyProperty="id" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into role
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">
                name,
            </if>
            <if test="code != null">
                code,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">
                #{name,jdbcType=VARCHAR},
            </if>
            <if test="code != null">
                #{code,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>
    <update id="updateByPrimaryKeySelective" parameterType="com.example.demo.model.Role">
        update role
        <set>
            <if test="name != null">
                name = #{name,jdbcType=VARCHAR},
            </if>
            <if test="code != null">
                code = #{code,jdbcType=VARCHAR},
            </if>
        </set>
        where id = #{id,jdbcType=BIGINT}
    </update>

    <select id="selectByAdminId" resultMap="BaseResultMap" parameterType="java.lang.Long">
        SELECT
            r.name,
            r.id,
            r.code
        FROM role r
            LEFT JOIN admin_role ar ON ar.role_id = r.id
        WHERE ar.admin_id = #{id,jdbcType=BIGINT}
    </select>

    <select id="listNoPages" resultMap="BaseResultMap">
        SELECT
            id,
            name,
            code
        FROM role
    </select>

    <insert id="addPermissions">
        insert into role_permission(role_id,permission_id)
        values
        <foreach item="ids" collection="permissions" separator=",">
            (#{roleId},#{ids})
        </foreach>
    </insert>

    <select id="list" resultMap="VoResultMap">
        SELECT
        r.id,
        r.name,
        r.code,
        rp.permission_id
        FROM role r LEFT JOIN role_permission rp ON r.id = rp.role_id
        <where>
            <if test="name != null">
                and r.name like CONCAT('%',#{name},'%')
            </if>
        </where>
    </select>

    <delete id="deletebyRoleId">
        DELETE FROM role_permission
        WHERE role_id = #{roleId};
    </delete>

    <insert id="updateRolePermission">
        insert into role_permission(role_id,permission_id)
        values
        <foreach item="ids" collection="permissions" separator=",">
            (#{roleId},#{ids})
        </foreach>
    </insert>

    <delete id="delete">
        delete from role
        where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>